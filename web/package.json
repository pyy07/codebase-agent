{
  "name": "codebase-driven-agent-web",
  "version": "0.1.0",
  "description": "Codebase Driven Agent Web UI",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "video:dev": "remotion studio",
    "video:render": "remotion render PromoVideo out/video.mp4",
    "video:render:hq": "remotion render PromoVideo out/promo-hq.mp4 --codec=h264 --crf=18 --pixel-format=yuv420p",
    "video:render:medium": "remotion render PromoVideo out/promo-medium.mp4 --codec=h264 --crf=23 --pixel-format=yuv420p",
    "video:render:webm": "remotion render PromoVideo out/promo.webm --codec=vp9 --crf=30",
    "video:export:all": "bash scripts/export-videos.sh || powershell -ExecutionPolicy Bypass -File scripts/export-videos.ps1",
    "video:test": "node scripts/test-video.js || powershell -ExecutionPolicy Bypass -File scripts/test-video.ps1",
    "video:preview": "remotion preview"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@remotion/bundler": "^4.0.409",
    "@remotion/cli": "^4.0.409",
    "@types/node": "^25.0.9",
    "@types/react-syntax-highlighter": "^15.5.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html-to-image": "^1.11.13",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "remotion": "^4.0.409",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
