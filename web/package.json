{
  "name": "codebase-driven-agent-web",
  "version": "0.1.0",
  "description": "Codebase Driven Agent Web UI",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/fix-electron-paths.js",
    "build:check": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "video:dev": "remotion studio",
    "video:setup-browser": "bash scripts/setup-chrome-headless.sh",
    "video:render": "remotion render PromoVideo out/video.mp4",
    "video:render:hq": "remotion render PromoVideo out/promo-hq.mp4 --codec=h264 --crf=18 --pixel-format=yuv420p",
    "video:render:medium": "remotion render PromoVideo out/promo-medium.mp4 --codec=h264 --crf=23 --pixel-format=yuv420p",
    "video:render:webm": "remotion render PromoVideo out/promo.webm --codec=vp9 --crf=30",
    "video:export:all": "bash scripts/export-videos.sh || powershell -ExecutionPolicy Bypass -File scripts/export-videos.ps1",
    "video:test": "node scripts/test-video.js || powershell -ExecutionPolicy Bypass -File scripts/test-video.ps1",
    "video:preview": "remotion preview"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@remotion/bundler": "^4.0.409",
    "@remotion/cli": "^4.0.409",
    "@types/node": "^25.0.9",
    "@types/react-syntax-highlighter": "^15.5.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html-to-image": "^1.11.13",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "remotion": "^4.0.409",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.codebase-agent.app",
    "productName": "Codebase Agent",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../codebase_driven_agent",
        "to": "codebase_driven_agent",
        "filter": ["**/*"]
      },
      {
        "from": "../run_backend.py",
        "to": "run_backend.py"
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../pyproject.toml",
        "to": "pyproject.toml"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
